%header.navbar.navbar-fixed-top.navbar-inverse
  .container.header
    = link_to t('.logo_title'), root_path, id: "logo"
    .rails_logo
      -# = link_to image_tag("im.jpg", alt: "Rails logo")
      %img{:alt => "Rails logo", :src => 'assets/im.jpg', :title => "Rails logo",:style => "width:15%; height:15%;" }

      %p.locale

        -#.ru_link
        = link_to image_tag("Russia.jpg", alt: "",  style: "width: 10%; height: 10%", title: "Русский" ), locale: :ru
        -#= link_to image_tag("Russia.jpg", alt: "",  style: "width: 8%; height: 8%; " )+" РУ", locale: :ru
        -#%p{style: "color: #c4f7ff"}" РУ"
        -#= link_to_unless I18n.locale == :ru, "Русский", locale: :ru
        -#%image_tag(style= "width: 8%; height: 8%" src= "assets/Russia.jpg")
        -#|
        = link_to image_tag("United_Kingdom.jpg", alt: "",  style: "width: 12%; height: 12%", title: "English"), locale: :en
        -#= link_to image_tag("United_Kingdom.jpg", alt: "",  style: "width: 9%; height: 9%")+" EN", locale: :en
        -#= link_to_unless I18n.locale == :en, "English", locale: :en
        %b
          = I18n.locale

    %nav
      %ul.nav.navbar-nav.pull-right
        %li= link_to t('.home'), root_url
        %li= link_to t('.help'), main_help_path
        - if signed_in?
          -#%li= link_to "Users", '#'
          %li.logged
            #{current_user.email}
          = gravatar_for current_user
          %li#fat-menu.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              %p
                = t('.person')
                %b.caret
            %ul.dropdown-menu
              %li= link_to t('.profile'), current_user
              %li= link_to t('.settings'), '#'
              %li.divider
              %li
                = link_to t('.sign_out'), signout_path, method: "delete"
        - else
          %li= link_to t('.sign_in'), signin_path



