%header.header
  %nav
    %ul.collapse.navbar-collapse.navbar-right
      %li.button.btn.btn-info.btn-lg= link_to t('.home'), root_path
      %li.button.btn.btn-info.btn-lg= link_to t('.help'), main_help_path
      - if signed_in?
        -#%li= link_to "Users", '#'
        %li.logged
          #{current_user.email}
        = gravatar_for current_user
        %li#fat-menu.dropdown
          %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
            %p
              = t('.person')
              %b.caret
          %ul.dropdown-menu
            %li= link_to t('.profile'), current_user

            %li
              = link_to t('.sign_out'), signout_path, method: "delete"
      - else
        %li.button.btn.btn-info.btn-lg= link_to t('.sign_in'), signin_path

    %p.locale
      -#.ru_link
      = link_to t('.Modern ART'), root_path, id: 'logo'
      = link_to image_tag("Russia.png", alt: "",  style: "width: 3%; height: 3%", title: "Русский" ), locale: :ru
      = link_to image_tag("United_Kingdom.png", alt: "",  style: "width: 3%; height: 3%", title: "English"), locale: :en
      %b
        = I18n.locale


